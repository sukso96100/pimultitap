<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/bower_components/webcomponentsjs/webcomponents-lite.min.js"></script>
    <link rel="import" href="/bower_components/paper-drawer-panel/paper-drawer-panel.html"/>
    <link rel="import" href="/bower_components/paper-header-panel/paper-header-panel.html"/>
    <link rel="import" href="/bower_components/paper-toolbar/paper-toolbar.html"/>
    <link rel="import" href="/bower_components/iron-flex-layout/iron-flex-layout.html"/>
    <link rel="import" href="/bower_components/iron-icons/iron-icons.html"/>
    <link rel="import" href="/bower_components/iron-icon/iron-icon.html"/>
    <link rel="import" href="/bower_components/paper-icon-button/paper-icon-button.html"/>
    <link rel="import" href="/bower_components/paper-material/paper-material.html"/>
    <link rel="import" href="/bower_components/paper-menu/paper-menu.html"/>
    <link rel="import" href="/bower_components/paper-item/paper-icon-item.html">
    <link rel="import" href="bower_components/paper-input/paper-input-container.html">
    <link rel="import" href="bower_components/paper-toggle-button/paper-toggle-button.html">
    <link rel="import" href="bower_components/paper-toast/paper-toast.html">
    <script src="/javascripts/util.js"></script>
    <script src="/javascripts/settings.js"></script>
  </head>
  <body onload="loadPref(0)">
    <paper-drawer-panel>
    <paper-header-panel drawer>
      <paper-toolbar>
        <span>Menu</span>
      </paper-toolbar>
      <div>
        <paper-menu>
      <paper-icon-item onclick="href('/')"><iron-icon icon="home" item-icon></iron-icon>Home</paper-icon-item>
    </paper-menu>
    <paper-menu>
      <% for(var i=0; i<state.length; i++) {%>
        <paper-icon-item onclick="loadPref(<%= state[i].num %>)">
          <iron-icon icon="extension" item-icon></iron-icon>
          [<%= state[i].num %>]
          <span id="i<%= state[i].num %>"><%= state[i].name %></span>
        </paper-icon-item>
      <% } %>
   </paper-menu>
      </div>
    </paper-header-panel>
    <paper-header-panel main>
      <paper-toolbar>
        <paper-icon-button icon="menu" paper-drawer-toggle></paper-icon-button>
        <span class="flex"><%= title %></span>
        <paper-icon-button icon="save" onclick="savePref()"></paper-icon-button>
      </paper-toolbar>
      <div>
        <paper-material elavation="1" style="padding:24px; margin:24px;">
          <h1><iron-icon icon="extension"></iron-icon> <b id="name">Switch 0</b></h1><br>
          <paper-toggle-button id="toggle"></paper-toggle-button><br><br>
            <paper-input-container>
              <label>Name</label>
              <input type="text" id="name-input" value="Switch 0">
            </paper-input-container>

        </paper-material>
      </div>
    </paper-header-panel>
  </paper-drawer-panel>
    <paper-toast id="toast"></paper-toast>
  </body>
</html>
